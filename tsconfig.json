{
  "compilerOptions": {
    "resolveJsonModule": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "config/*": ["src/config/*"],
      "views/*": ["src/views/*"],
      "utils/*": ["src/utils/*"],
      "assets/*": ["src/assets/*"],
      "publicViewsStyle/*": ["src/assets/styles/views/public/*"],
      "privateViewsStyle/*": ["src/assets/styles/views/private/*"],
    },
  },
  "include": [
    "./src/**/**/*",
  ],
  "exclude": [
    "node_modules",
  ],
}