{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "config/*": ["src/config/*"],
      "views/*": ["src/views/*"],
    },
  },
  "include": [
    "./src/**/**/*",
  ],
  "exclude": [
    "node_modules",
  ],
}